{
  "name": "tictactoe-weapon-collection",
  "version": "1.0.0",
  "description": "Epic Tic-Tac-Toe with Marvel vs DC weapon collection gameplay",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "cd backend && npm run dev",
    "frontend:dev": "cd frontend && npm start",
    "build": "npm run build:backend && npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && serve -s build -l 3000",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "clean": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "cd frontend && rm -rf build node_modules",
    "clean:backend": "cd backend && rm -rf dist node_modules",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test -- --coverage --watchAll=false",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "production:build": "NODE_ENV=production npm run build",
    "production:start": "./scripts/start-production.sh",
    "production:stop": "./scripts/stop-production.sh",
    "docker:build": "docker build -t tictactoe-game .",
    "docker:run": "docker run -p 3001:3001 -p 3000:3000 tictactoe-game",
    "health:check": "curl -f http://localhost:3001/health || exit 1"
  },
  "keywords": [
    "tic-tac-toe",
    "marvel",
    "dc",
    "weapons",
    "game",
    "react",
    "typescript",
    "node.js",
    "socket.io",
    "production"
  ],
  "author": "Software Architecture AI",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
} 